{
  "name": "xero-bank-balances",
  "version": "1.0.0",
  "description": "Display balances of all connected bank accounts in a Xero account",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/views dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "postinstall": "npx playwright install --with-deps chromium"
  },
  "keywords": [
    "xero",
    "bank",
    "balances",
    "accounting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pg": "^8.15.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "otplib": "^12.0.1",
    "pg": "^8.16.3",
    "playwright": "^1.55.0",
    "qrcode": "^1.5.3",
    "winston": "^3.11.0",
    "xero-node": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "20.x"
  }
}
